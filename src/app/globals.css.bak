@import "tailwindcss";
@plugin "@tailwindcss/typography";

:root {
  --background: #f4e285;
  /* --background: #fbbf24; */
  /* --background: #fcd34d; Potenisal winner (SEX PISTOLS) */
  /* --background: #ffffff; */
  /* --background: #fefae0; */
  /* --background: #ffe6a7; */
  --foreground: #171717;
}

@theme inline {
  --color-background: var(--background);
  --color-foreground: var(--foreground);
  --font-sans: var(--font-geist-sans);
  --font-mono: var(--font-geist-mono);
  --font-family-arapey: var(--font-arapey), serif;
}

@media (prefers-color-scheme: dark) {
  :root {
    --background: #232627;
    /* --background: #0a0a0a;  Optional darker background */
    --foreground: #ededed;
  }
}

body {
  background: var(--background);
  color: var(--foreground);
  /* font-family: var(--font-arapey), serif; */
}
